<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000">
    <!-- Floating Action Button -->
    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_main"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="Menu"
        android:src="@drawable/pati"
        android:backgroundTint="@android:color/white"
        app:elevation="10dp"
        app:maxImageSize="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_margin="16dp"
        android:scaleType="centerInside"
        android:outlineSpotShadowColor="@android:color/white"
        app:rippleColor="@android:color/darker_gray"
        android:stateListAnimator="@null"
        android:background="@drawable/fab_glow"/>
    <!-- Mini FABs (Hidden Initially) -->
    <!-- Mini FABs (Initially Hidden) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_1"
        android:src="@drawable/kedi_"
        style="@style/MiniFabStyle"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_2"
        android:src="@drawable/dog"
        style="@style/MiniFabStyle"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_3"
        android:src="@drawable/kurt"
        style="@style/MiniFabStyle"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_4"
        android:src="@drawable/karga"
        style="@style/MiniFabStyle"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_5"
        android:src="@drawable/hawk_"
        style="@style/MiniFabStyle"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_6"
        android:src="@drawable/eagle"
        style="@style/MiniFabStyle"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_7"
        android:src="@drawable/keklik_"
        style="@style/MiniFabStyle"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_8"
        style="@style/MiniFabStyle"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_9"
        style="@style/MiniFabStyle"/>
    <!-- Camera View -->
    <org.opencv.android.JavaCamera2View
        android:id="@+id/kurmes_camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- Camera Status Text -->
    <TextView
        android:id="@+id/camera_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="#CC000000"
        android:text="Camera Status: Initializing..."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true" />
    <!-- Switch Camera Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/switch_camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="#CC000000"
        android:text="Switch Camera"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />
    <!-- Label for Image Recognition -->
    <TextView
        android:id="@+id/label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Processing..."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
