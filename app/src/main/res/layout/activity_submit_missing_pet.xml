<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Photo Upload -->
        <ImageView
            android:id="@+id/missing_pet_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="Pet Photo"
            android:src="@drawable/holder" />

        <Button
            android:id="@+id/upload_photo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Photo"
            android:layout_marginTop="16dp" />

        <!-- Pet Details -->
        <EditText
            android:id="@+id/pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pet Name"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/pet_species"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Species"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/pet_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/pet_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/last_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Known Location"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/missing_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date Missing"
            android:layout_marginTop="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_missing_pet_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>