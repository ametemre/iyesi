<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ImageView for Pet Photo -->
        <ImageView
            android:id="@+id/pet_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Pet Photo"
            android:scaleType="centerCrop"
            android:src="@drawable/holder"/>

        <!-- Text Views for Pet Information -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pet_image"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pet_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cinsi"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/found_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bulunduğu tarih"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/found_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bulunduğu yer"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/finder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bulan"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
